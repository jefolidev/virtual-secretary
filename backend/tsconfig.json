{
  "compilerOptions": {
    "lib": [
      "ES2024"
    ],
    "module": "nodenext",
    "target": "ES2024",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@prisma/*": [
        "./prisma/*"
      ],
      "@test/*": [
        "./test/*"
      ]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "types": [
      "vitest/globals",
      "node"
    ]
  }
}