{
	"$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**",
			"!!biome.json",
			"!!**/dist",
			"!!node_modules",
			"!!prisma"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80,
		"bracketSpacing": true,
		"includes": [
			"!node_modules/**",
			"!!biome.json"
		]
	},
	"linter": {
		"enabled": true,
		"includes": [
			"!node_modules/**"
		],
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			},
			"style": {
				"useImportType": "off"
			}
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"bracketSpacing": true,
			"semicolons": "asNeeded",
			"lineWidth": 60,
			"quoteProperties": "asNeeded",
			"trailingCommas": "es5"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	}
}